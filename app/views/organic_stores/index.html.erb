
  <div class="container">
  <div class="card mt-4">
    <div class="card-body">
      <h2 class="card-title">Organic Stores</h2>
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      <h3 class="card-subtitle mt-3">Products</h3>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ITEM NO</th>
              <th scope="col">ITEM</th>
              <th scope="col">QUANTITY(lbs.)</th>
              <th scope="col">PRICE($)</th>
              <th scope="col">DELIVERY DATE</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @organic_stores.each do |organic_store| %>
              <tr>
                <td><%= organic_store.ITEMNO %></td>
                <td><%= organic_store.ITEM %></td>
                <td><%= organic_store.QTY %></td>
                <td><%= organic_store.PRICE %></td>
                <td><%= organic_store.DDATE %></td>
                <td>
                  <%= link_to 'Show', organic_store, class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Edit', edit_organic_store_path(organic_store), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Remove', organic_store, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-sm' %>
                </td>
              </tr>

            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
  

<div class="container text-center mt-3">
  <%= link_to 'Add New Product', new_organic_store_path, class: "btn btn-dark" %>
</div>

</div>

  </tbody>
</table>


