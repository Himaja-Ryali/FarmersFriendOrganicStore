%body
  %header
       
    %h4{style: "font-family: Arial;"} Welcome to our store
    %h6{style: "font-family: Arial;"}
    %p Please find our products information below
  :css
    h4 {text-align: center;}
    h7 {text-align: center;}
    p {text-align: center;}
    div {text-align: center;}
  .container{style: "background-color:#000000;"}
    div {
    }
    .card.mt-4
      .card-body
        %h2.card-title{style: "background-color:#33cc33; font-family: Arial;"} Organic Stores
        - if notice
          %p#notice= notice
        %h3.card-subtitle.mt-3 Products
        .table-responsive
          %table.table
            %thead
              %tr{style: "background-color:#ffc2b3;"}
                %th{scope: "col"} ITEM NO
                %th{scope: "col"} ITEM
                %th{scope: "col"} QUANTITY(lbs.)
                %th{scope: "col"} PRICE($)
                %th{scope: "col"} DELIVERY DATE
                %th{scope: "col"}
            %tbody
              - @organic_stores.each do |organic_store|
                %tr
                  %td= organic_store.ITEMNO
                  %td= organic_store.ITEM
                  %td= organic_store.QTY
                  %td= organic_store.PRICE
                  %td= organic_store.DDATE
                  %td
                    = link_to 'Show', organic_store, class: 'btn btn-info btn-sm'
                    = link_to 'Edit', edit_organic_store_path(organic_store), class: 'btn btn-info btn-sm'
                    = link_to 'Remove', organic_store, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-sm'
  %table
    .container.text-center.mt-3{style: "background-color:#000000;"}
      = link_to 'Add New Product', new_organic_store_path, class: "btn btn-light"
      %b
      %div{style: "position:fixed; left:620px; down:60px;"}
        %footer
          %p
            %h7 Copyright © 2023: All rights reserved.

            
